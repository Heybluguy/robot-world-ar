  <!DOCTYPE html>
<html>
  <head>
    <title>Your Droid</title>
    <link rel="stylesheet" type="text/css" href="/robot/index.css">
  </head>
  <body>
    <header>
    <div class="fade"></div>
    <section class="star-wars">
      <div class="crawl">
        <div class="title">
          <h1>Droid</h1>
        </div>
      </div>
    </section>
    </header>
    <ul>
      <li><a href="/robots">Droid Inventory</a></li>
      <li><a href="/robots/new">Build a Droid</a></li>
    </ul>

    <div class='container'>
        <h1><%= @robot.name %></h1>

        <p><%= @robot.city %></p>

        <p><%= @robot.state %></p>

        <p><%= @robot.department %></p>
        <a href="/robots/<%= @robot.id  %>/edit">Edit</a>
        <form action="/robots/<%= @robot.id %>" method="POST"><br>
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="delete"/>
        </form>
    </div>

  </body>
</html>